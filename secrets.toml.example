# Copy this file to secrets.toml and fill in your API keys
# Note: secrets.toml is gitignored and should never be committed

# ============ OpenAI Configuration ============
OPENAI_API_KEY = "sk-your-openai-api-key-here"
OPENAI_API_TYPE = "openai"  # or "azure"

# If using Azure OpenAI, uncomment and fill these:
# AZURE_API_BASE = "https://your-resource.openai.azure.com/"
# AZURE_API_VERSION = "2024-02-01"

# ============ Search Engine Configuration ============
# Choose one or more search engines

# Serper.dev (recommended - 2500 free queries/month)
SERPER_API_KEY = "your-serper-api-key"

# Alternative search engines (optional)
# BING_SEARCH_API_KEY = "your-bing-search-api-key"  # Note: Bing API shutting down August 2025
# YOU_API_KEY = "your-you-api-key"
# BRAVE_API_KEY = "your-brave-api-key"
# TAVILY_API_KEY = "your-tavily-api-key"

# ============ Vector Store Configuration ============
# For cloud-based Qdrant (optional)
# QDRANT_API_KEY = "your-qdrant-api-key"
# QDRANT_URL = "https://your-cluster.qdrant.io:6333"

# ============ Embedding Model Configuration ============
# Using OpenAI embeddings by default
ENCODER_API_TYPE = "openai"

# Alternative embedding services (optional)
# HUGGINGFACE_API_KEY = "your-huggingface-api-key"

# ============ Application Configuration ============
# Default models to use
DEFAULT_CONV_MODEL = "gpt-3.5-turbo"
DEFAULT_GENERATION_MODEL = "gpt-4"
DEFAULT_EMBEDDING_MODEL = "text-embedding-3-small"

# Generation parameters
DEFAULT_TEMPERATURE = 0.8
DEFAULT_MAX_TOKENS = 1000

# Retrieval parameters
DEFAULT_SEARCH_TOP_K = 10
DEFAULT_MAX_SEARCH_QUERIES = 5